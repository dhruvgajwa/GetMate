<?xml version="1.0" encoding="utf-8"?>
<!--  this is layout of the item in timeline so
  make it again as per need
 -->

<android.support.v7.widget.CardView
    android:background="@color/feed_bg"
    android:layout_marginBottom="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.getmate.demo181201.CustomViews.EventTimelineImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:background="@drawable/event_image_demo"
        android:layout_height="344dp"
        />
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="timestamp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/event_title"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#BF000000"
        android:textStyle="bold"
        android:text="Splash Art competition"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_description"
            android:text="Margin widths are defined as fixed values at each breakpoint range. To better adapt to the screen, the margin width can change at different breakpoints. Wider margins are more appropriate for larger screens, as they create more whitespace around the perimeter of content.  "
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            />
        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUrl"
            android:visibility="gone"
            android:textColorLink="@color/link"
            android:linksClickable="true"
            android:padding="5dp"
            android:paddingRight="@dimen/feed_item_padding_left_right"
            android:text="link"/>

        <RelativeLayout
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <Button
                android:background="@drawable/info_icon"
                android:id="@+id/dtl_btn"
                android:alpha="0.8"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <Button
                android:id="@+id/map_btn"
                android:background="@drawable/map_icon_timeline"
                android:alpha="0.7"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="12dp"
                android:layout_toLeftOf="@+id/gng_button"
                />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/gng_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="12dp"
                android:layout_toLeftOf="@+id/like_btn"
                android:layout_marginBottom="1dp"
                android:text="9+"
                android:textSize="16dp" />
            <Button
                android:layout_toLeftOf="@+id/save_btn"
                android:id="@+id/like_btn"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/heart_icon"
                android:alpha="0.8"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="12dp"
                android:layout_toLeftOf="@+id/share_btn"
                android:alpha="0.8"
                android:background="@drawable/save_icon" />
            <Button
                android:id="@+id/share_btn"
                android:layout_marginHorizontal="12dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/share_icon"
                android:alpha="0.6"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </RelativeLayout>
    </LinearLayout>


    </android.support.v7.widget.CardView>
