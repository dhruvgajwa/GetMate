<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".createEvent.AddOtherOrganisers">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/lay_1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="32dp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:textStyle="bold"
            android:text="Extra Link if available !"/>
        <EditText
            android:id="@+id/title_age"
            android:hint="paste the link here if you want customers to give another reference to your event"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_below="@+id/lay_1"
        android:id="@+id/text_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="24dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:textStyle="bold"
        android:text="Add other organisers  !"/>
    <LinearLayout
        android:layout_below="@+id/text_ad"
        android:layout_marginTop="20dp"
        android:id="@+id/orgMainLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Other Organisers Details" />


            <Button
                android:backgroundTint="@color/basil_orange"

                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:id="@+id/organisersButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/add_button" />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/orgMainLinLay"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@color/grey_300"
            android:padding="16dp"
            android:text="previous"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:text="next"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>