<?xml version="1.0" encoding="utf-8"?>




<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<android.support.v7.widget.CardView
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#000000">

        <com.getmate.demo181201.CustomViews.EventTimelineImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:alpha="0.35"
            android:scaleType="center"
            android:background="@null"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"

        android:src="@null"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="3dp"
        app:civ_fill_color="#35FD5523" />
        <TextView
            android:id="@+id/name_FMC"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhruv Gajwa"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tagline_FMC"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textAlignment="center"

            android:layout_height="wrap_content"
            android:text="Studies biomedical engineering at IIT Madras"
            android:textColor="@color/white"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/city_FMC"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textAlignment="center"

            android:layout_height="wrap_content"
            android:text="Chennai"
            android:textColor="@color/white"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="156dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/handle_FMC"
            android:layout_height="25dp"
            android:text="Random_Nerd"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:padding="1dp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bio_button"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tagsView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch">

    </com.google.android.flexbox.FlexboxLayout>



        <view
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="what I am looking for"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/bio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginHorizontal="16dp"
            android:textAlignment="center"
            android:text=" Here am I supposed to write bio? What if I choose to write a joke instead? It is my choice, as for now I am designing the layout I should better stick to just completing the part "/>
        <view
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Acheivements"
        android:textSize="10dp" />
        <TextView
            android:id="@+id/bio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginHorizontal="16dp"
            android:textAlignment="center"
            android:text=" Here am I supposed to write bio? What if I choose to write a joke instead? It is my choice, as for now I am designing the layout I should better stick to just completing the part "/>

        <view
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Acheivements"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/bio3"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginHorizontal="16dp"
            android:textAlignment="center"
            android:text=" Here am I supposed to write bio? What if I choose to write a joke instead? It is my choice, as for now I am designing the layout I should better stick to just completing the part "/>



    </LinearLayout>







</android.support.v7.widget.CardView>
</ScrollView>