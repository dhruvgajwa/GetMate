                <TextView
                    android:id="@+id/org1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhruv Gajwa"/>
                <TextView
                    android:id="@+id/org1Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7092541851"/>
                <TextView
