                android:textSize="18dp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="#DADBDF"/>





        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">
            <Button
                android:background="@null"
                android:padding="5dp"
                android:id="@+id/link_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:drawableTop="@drawable/link"

                android:text="Register"
                />
            <Button
                android:background="@null"
                android:padding="5dp"
                android:drawableTop="@drawable/clock"
                android:text="AUG 01, 6 pm"
                android:id="@+id/time_sa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                />
            <Button
                android:background="@null"
                android:padding="5dp"
                android:text="9 going"
                android:id="@+id/gng_cnt_btn_sa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:drawableTop="@drawable/people"/>


        </LinearLayout>


        <TextView
            android:id="@+id/description_sa"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="no large text here because it sucks more than a newborn baby doed to nipple"
