<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.getmate.demo181201.InterestSelection.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sports"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:layout_marginBottom="4dip"
            android:id="@+id/connection_image"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"

            android:orientation="vertical">
            <TextView
                android:text="Random___Nerd"
                android:id="@+id/connection_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Dhuv Gajwa"
                android:id="@+id/connection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>