<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.getmate.demo181201.InterestSelection.RoundedImageView
           android:layout_marginVertical="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/sports"

            android:id="@+id/connection_image"
            />
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"

            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Random___Nerd"
                android:id="@+id/connection_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="left"
                android:text="Dhuv Gajwa"
                android:textSize="16sp"
                android:id="@+id/connection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>