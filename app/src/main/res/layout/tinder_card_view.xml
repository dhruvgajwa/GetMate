<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:maxHeight="540dp"
    android:layout_height="540dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#000000">

            <ImageView
                android:id="@+id/background_"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:alpha="0.50"
                android:scaleType="centerCrop"
                android:background="@null"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="240dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_profile_i"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"

                android:src="@drawable/demo_prfl_pic"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="3dp"
                app:civ_fill_color="#35FD5523" />
            <TextView
                android:id="@+id/name_"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dhruv Gajwa"
                android:textColor="@color/white"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/tagline_"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textAlignment="center"

                android:layout_height="wrap_content"
                android:text="Studies biomedical engineering at IIT Madras"
                android:textColor="@color/white"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/city_"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:textAlignment="center"

                android:layout_height="wrap_content"
                android:text="Chennai"
                android:textColor="@color/white"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="216dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/handle_"
                android:layout_height="25dp"
                android:text="Random_Nerd"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:padding="1dp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bio_button"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical">


            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tags_view"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:alignContent="stretch"
                app:alignItems="stretch"
                app:flexWrap="wrap">

            </com.google.android.flexbox.FlexboxLayout>


            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                   android:id="@+id/bio_tcp"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" DickHead"/>
            </LinearLayout>

            </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>