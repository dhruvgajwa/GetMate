<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/event_image_ses"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


        <com.getmate.demo181201.CustomViews.EventTimelineImageView
            android:layout_width="148dp"

            android:background="@drawable/event_image_demo"

            android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/event_image_ses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/title_ses"
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chris Young Chennai Tour "
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/title_ses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginHorizontal="8dp"
                android:text="Monay, January 211  1:00 AM  2 Hours"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>