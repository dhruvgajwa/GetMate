<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createEvent.DateActivity">

        <TextView
            android:id="@+id/text_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="24dp"
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:textStyle="bold"
            android:text="State the Date and Time of your event !"/>
    <TextView
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@+id/text_ad"
        android:textStyle="bold"
        android:textSize="16dp"/>



<LinearLayout

    android:id="@+id/linlay_from"
    android:layout_below="@+id/f"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="24dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:id="@+id/from_date"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/btn_ca"
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:background="@drawable/calander"/>
       <TextView
           android:layout_marginLeft="16dp"
           android:layout_marginTop="2dp"
           android:layout_toRightOf="@+id/btn_ca"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:text="Day"
           android:textColor="@color/black"
           android:alpha="0.7"
           android:textStyle="bold"
           android:textSize="24dp"/>

   </RelativeLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/black"
        android:alpha="0.2"/>
    <RelativeLayout
        android:id="@+id/from_time"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:alpha="0.8"
            android:id="@+id/btn_cloc"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/clock"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/btn_cloc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Time"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:textStyle="bold"
            android:textSize="24dp"/>

    </RelativeLayout>

</LinearLayout>
    <RelativeLayout
        android:id="@+id/d_from"
        android:visibility="gone"
      android:layout_below="@+id/linlay_from"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/from_icon"
            android:background="@drawable/calendar_icon"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/from_text"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/from_icon"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:text="Monay, January 21
11:00 AM  2 Hours"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView

        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To :"
        android:layout_below="@id/linlay_from"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="24dp"

        android:textStyle="bold"
        android:textSize="16dp"/>



    <LinearLayout
        android:id="@+id/linlay_to"
        android:layout_below="@+id/t"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cal"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/calander"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/btn_cal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Day"
                android:textColor="@color/black"
                android:alpha="0.7"
                android:textStyle="bold"
                android:textSize="24dp"/>

        </RelativeLayout>
        <View
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:alpha="0.2"/>
        <RelativeLayout
            android:id="@+id/to_time"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:alpha="0.8"
                android:id="@+id/btn_clock"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/clock"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/btn_clock"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Time"
                android:textColor="@color/black"
                android:alpha="0.7"
                android:textStyle="bold"
                android:textSize="24dp"/>

        </RelativeLayout>



    </LinearLayout>
    <RelativeLayout
        android:id="@+id/d_to"
        android:visibility="gone"
        android:layout_below="@+id/linlay_to"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/to_icon"

            android:background="@drawable/calendar_icon"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/to_text"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/to_icon"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:text="Monay, January 21
11:00 AM  2 Hours"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="20dp"
        >

        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@color/grey_300"
            android:padding="16dp"
            android:text="previous"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:text="next"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>