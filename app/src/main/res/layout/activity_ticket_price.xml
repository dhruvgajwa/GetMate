<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createEvent.TicketPrice">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lay_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="32dp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:textStyle="bold"
            android:text="Ticket Type !"/>
        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox

                android:layout_marginRight="12dp"
                android:backgroundTint="@color/basil_orange"
                android:layout_centerInParent="true"
                android:id="@+id/paid"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout

                android:layout_toRightOf="@id/paid"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:text="ticket will have a price and Platform will charge a commission on it"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
            <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/grey_300"/>


            <RelativeLayout
                android:id="@+id/free_rel_lay"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox

                android:layout_marginRight="12dp"
                android:backgroundTint="@color/basil_orange"
                android:layout_centerInParent="true"
                android:id="@+id/free"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout

                android:layout_toRightOf="@id/free"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:text="No Commission will be charged"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </RelativeLayout>
        <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/grey_300"/>
            <RelativeLayout
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox

                    android:layout_marginRight="12dp"
                    android:backgroundTint="@color/basil_orange"
                    android:layout_centerInParent="true"
                    android:id="@+id/no_ticket_reqired"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout

                    android:layout_toRightOf="@id/no_ticket_reqired"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No ticket required : OPEN EVENT"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:text="No limitation on maximum number of participants but you can still see the stats for saved by and likes"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/grey_300"/>
    </LinearLayout>


        <LinearLayout
        android:visibility="gone"
        android:id="@+id/lay_2"
        android:layout_below="@+id/lay_1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="3"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_weight="1"
                android:text="Paid"
                android:id="@+id/paid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_weight="1"
                android:id="@+id/free2"
                android:text="Free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_weight="1"
                android:id="@+id/no_ticket_reqired2"
                android:text="NO Ticket Required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="32dp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:alpha="0.7"
            android:textStyle="bold"
            android:text="Ticket Price !"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="20dp"
                android:layout_alignBottom="@+id/price"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:id="@+id/text"
                android:textSize="20dp"
                android:textColor="@color/darkgrey"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:paddingLeft="12dp"
                android:layout_toRightOf="@+id/text"
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:hint=" Amount"
                app:met_baseColor="@color/black"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"

                app:met_floatingLabelTextColor="@color/black"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="Price"
                app:met_primaryColor="@color/basil_orange"
                app:met_underlineColor="@color/darkgrey" />

        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"

            android:text="The effective price for Buyer : "/>

        <TextView
            android:id="@+id/final_price"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="INR 00.00"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:alpha="0.9"
            android:textSize="36dp"/>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
       >

        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:background="@color/grey_300"
            android:padding="16dp"
            android:text="previous"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/next"
            android:background="@drawable/edit_text_background"
            android:text="next"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>