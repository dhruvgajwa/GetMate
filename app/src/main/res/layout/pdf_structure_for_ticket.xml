<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lin_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="12dp"
                android:id="@+id/event_details_lin_lay"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/title_pdf"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cycling Ride to mahabalipuram"/>
                <TextView
                    android:textSize="16dp"
                    android:id="@+id/address_pdf"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taramani Gate, IIT Madras, Chennai 600036"/>
                <TextView
                    android:textSize="16dp"
                    android:id="@+id/time_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Jan 23 2019 at 6:00 pm(IST)" />
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By: "/>
                    <TextView
                        android:id="@+id/creator_name_pdf"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Random_nerd \n random@gmail.com \t 7092541851"/>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
        <ImageView

            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image_view_pdf"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />

        <LinearLayout
            android:padding="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="No. of Tickets: "/>
            <TextView
                android:id="@+id/not_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04"/>

        </LinearLayout>


        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked By:"
            android:textSize="20dp"
            android:textColor="#222222"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/name_pdf"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dhruv Gajwa"/>
            <TextView
                android:id="@+id/email_pdf"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dhruvg.dakshana16@gmail.com"/>
            <TextView
                android:id="@+id/phone_pdf"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7092541851"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>